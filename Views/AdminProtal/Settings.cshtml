@model AdminSettingsModel

@{
    ViewData["Title"] = "Site Settings";
}

<div class="container py-4" style="max-width: 600px;">
    <h2 class="mb-4">Site Settings</h2>

    <form asp-action="SaveSettings" method="post" class="card p-4 shadow-sm">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="SiteName" class="form-label">Site Name</label>
            <input asp-for="SiteName" class="form-control" />
            <span asp-validation-for="SiteName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ContactEmail" class="form-label">Contact Email</label>
            <input asp-for="ContactEmail" type="email" class="form-control" />
            <span asp-validation-for="ContactEmail" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MaintenanceMode" class="form-label">Maintenance Mode</label>
            <select asp-for="MaintenanceMode" class="form-select">
                <option value="false">Off</option>
                <option value="true">On</option>
            </select>
            <span asp-validation-for="MaintenanceMode" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-warning w-100">Save Settings</button>
    </form>
</div>
