@model SuperMarket.DTO.ProductDTO

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-5">
    <div class="mb-4">
        <h2 class="fw-bold text-primary">Edit Product</h2>
        <p class="text-muted">Make changes to the product below</p>
    </div>

    <div class="card shadow-sm rounded-4 p-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-semibold"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                <button type="submit" class="btn btn-primary px-4">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
