@model LoginAccountModel

<form asp-action="Login" method="post" class="card shadow-sm p-4 mx-auto" style="max-width: 400px;">
    <h2 class="mb-3 text-center">Login</h2>
    <hr />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="UserNameOrEmail" class="form-label"></label>
        <input asp-for="UserNameOrEmail" class="form-control" />
        <span asp-validation-for="UserNameOrEmail" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted small">Don't have an account?</span>
        <a asp-action="Register" class="btn btn-link p-0">Register</a>
    </div>

    <button type="submit" class="btn btn-primary w-100">Login</button>
</form>
