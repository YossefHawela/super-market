@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-5 text-danger">Request Blocked</h1>
        <p class="text-muted">Your request triggered our threat detection. Cute try.</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 bg-danger text-white">
                <div class="card-body text-center">
                    <h5 class="card-title">Suspicious Behavior Detected</h5>
                    <p class="card-text text-white">Either you’re testing our patience or our firewall. Neither will end well.</p>
                    <a href="/" class="btn btn-outline-light w-100">Back to Safety</a>
                </div>
            </div>
        </div>
    </div>
</div>
